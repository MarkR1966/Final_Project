// Requirements for jenkins to automaticall build the application requirements
pipeline {

    agent any

    stages{
        // Do initial setup
        stage('Set Manager Node'){

            steps {

                sh 'aws eks update-kubeconfig --name FP-EKS-CLUSTER'

            }

        }
        // Deploy backend pods
        stage('Deploy Backend'){

            steps {

                sh 'kubectl create -f dev_backend_pods.yml'

            }

        }
        // Deploy frontend pods
        stage("Deploy Frontend") {

            steps {

                sh 'kubectl create -f dev_frontend_pods.yml'

            }

        }
        // Deploy NGINX
        stage('Deploy NGINX') {

            steps {

                sh 'kubectl crete -f dev_nginx_pods.yml'


                }

        }
    }

}